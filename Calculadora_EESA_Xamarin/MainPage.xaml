<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_EESA_Xamarin.MainPage">

    <StackLayout BackgroundColor="Black">
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Calculadora" HorizontalTextAlignment="Center" TextColor="#FF7433" FontSize="36"/> 
        </Frame>
        <Entry Placeholder="0" x:Name="Resultado"  HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        <Grid Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="AC" Grid.Row="0" Grid.Column="0" TextColor="#FF7433"  BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="eliminar" Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="C" Grid.Row="0" Grid.Column="1" TextColor="#FF7433"  BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="borrar"   Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="%" Grid.Row="0" Grid.Column="2" TextColor="#FF7433"  BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="residuo"  Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="7" Grid.Row="1" Grid.Column="0" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="siete"    Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="8" Grid.Row="1" Grid.Column="1" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="ocho"     Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="9" Grid.Row="1" Grid.Column="2" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="nueve"    Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="4" Grid.Row="2" Grid.Column="0" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="cuatro"   Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="5" Grid.Row="2" Grid.Column="1" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="cinco"    Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="6" Grid.Row="2" Grid.Column="2" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="seis"     Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="1" Grid.Row="3" Grid.Column="0" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="uno"      Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="2" Grid.Row="3" Grid.Column="1" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="dos"      Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="3" Grid.Row="3" Grid.Column="2" TextColor="Beige"      BackgroundColor="black"     FontSize="36" CornerRadius="50" x:Name="tres"     Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="÷" Grid.Row="0" Grid.Column="3" TextColor="#FF7433"  BackgroundColor="black"     FontSize="40" CornerRadius="50" x:Name="division" Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="x" Grid.Row="1" Grid.Column="3" TextColor="#FF7433"  BackgroundColor="black"     FontSize="27" CornerRadius="50" x:Name="por"      Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="-" Grid.Row="2" Grid.Column="3" TextColor="#FF7433"  BackgroundColor="black"     FontSize="50" CornerRadius="50" x:Name="menos"    Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="+" Grid.Row="3" Grid.Column="3" TextColor="#FF7433"  BackgroundColor="black"     FontSize="40" CornerRadius="50" x:Name="mas"      Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="0" Grid.Row="4" Grid.Column="0" TextColor="Beige"      BackgroundColor="black"     FontSize="40" CornerRadius="50" x:Name="cero"     Grid.ColumnSpan="2" Clicked="Numero" />
            <Button Text="." Grid.Row="4" Grid.Column="2" TextColor="Beige"      BackgroundColor="black"     FontSize="40" CornerRadius="50" x:Name="punto"    Grid.ColumnSpan="1" Clicked="Numero" />
            <Button Text="=" Grid.Row="4" Grid.Column="3" TextColor="Beige"      BackgroundColor="#FF7433" FontSize="40" CornerRadius="50" x:Name="igual"    Grid.ColumnSpan="1" Clicked="Numero" />

        </Grid>
    </StackLayout>

</ContentPage>
